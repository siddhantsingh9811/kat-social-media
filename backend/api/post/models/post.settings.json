{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "text"
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "image",
        "text"
      ],
      "required": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "uuid": {
      "type": "uid",
      "required": true
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    }
  }
}
